<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>lawyer</name>
	<version>1.0</version>
	<creationDate>12/15/2017</creationDate>
	<author>Svyatoslav Shushmintsev</author>
	<authorEmail>small85@mail.ru</authorEmail>
	<copyright>Copyright (C) 2017 All rights reserved.</copyright>
	<description>TPL_LAWYER_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>img</folder>
		<folder>language</folder>
		<folder>less</folder>
		<folder>scripts</folder>
		<folder>components</folder>	
	</files>
	<positions>
		<position>header-logo</position>
		<position>header-body</position>
		<position>body</position>
		<position>main-menu</position>
		<position>main-video</position>
		<position>news</position>
		<position>lang</position>
		<position>side-menu</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.tpl_lawyer.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.tpl_lawyer.sys.ini</language>
		<language tag="en-US">en-US/en-US.tpl_lawyer.ini</language>
		<language tag="en-US">en-US/en-US.tpl_lawyer.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="templateColor" 
					type="color" 
					label="TPL_LAWYER_COLOR_LABEL"
					description="TPL_LAWYER_COLOR_DESC" 
					class="" 
					default="#08C"
				/>

				<field 
					name="templateBackgroundColor" 
					type="color" 
					label="TPL_LAWYER_BACKGROUND_COLOR_LABEL"
					description="TPL_LAWYER_BACKGROUND_COLOR_DESC" 
					class="" 
					default="#F4F6F7"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_LAWYER_LOGO_LABEL"
					description="TPL_LAWYER_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="sitetitle"  
					type="text" 
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string" 
				/>

				<field 
					name="sitedescription"  
					type="text" 
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string" 
				/>

				<field 
					name="googleFont"
					type="radio"
					label="TPL_LAWYER_FONT_LABEL"
					description="TPL_LAWYER_FONT_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field 
					name="googleFontName" 
					type="text" 
					label="TPL_LAWYER_FONT_NAME_LABEL"
					description="TPL_LAWYER_FONT_NAME_DESC" 
					class="" 
					default="Open+Sans"
					showon="googleFont:1" 
				/>

				<field 
					name="fluidContainer"
					type="radio"
					label="TPL_LAWYER_FLUID_LABEL"
					description="TPL_LAWYER_FLUID_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">TPL_LAWYER_FLUID</option>
					<option value="0">TPL_LAWYER_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
